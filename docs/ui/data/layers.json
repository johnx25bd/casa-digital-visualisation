[
  {
    "name": "airports-json",
    "path": "./data/airports.json",
    "type": "geojson",
    "addLayerParams": {
      "default": {
        "type": "circle",
        "paint": {
          "circle-radius": [
            "match",
            ["get", "type"],
            "small", 3,
            "mid", 5,
            "major", 9,
            2
          ],
          "circle-color": [
            "match",
            ["get", "type"],
            "small", "#fbb03b",
            "mid", "#223b53",
            "major", "yellow",
            "#ccc"
          ]
        }
      },
      "dim_a": {}
    }
  },
  {
    "name": "airports-mapbox-data",
    "type": "mapbox",
    "path": "none",
    "addLayerParams": {
      "default": {
        "id": "airports-mapbox-data",
